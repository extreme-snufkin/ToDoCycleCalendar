<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/kikujin"
	android:id="@+id/backuprestore"
>
	<LinearLayout
		 android:id="@+id/ll1"
		 android:orientation="vertical"
		 android:layout_width="match_parent"
		 android:layout_height="match_parent"
		 android:gravity="center"
		 android:background="@color/kikujin"
	>
		<LinearLayout
			 android:id="@+id/ll2"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:layout_weight="1"
			 android:orientation="vertical"
			 android:gravity="top"
			 android:background="@drawable/border2_bgkikujin"
			 android:onClick="dispBackUpDialog"
		 >
			<TextView
				 android:id="@+id/btitle"
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:text="@string/backuptitle"
				 android:textColor="@color/white"
				 android:textSize="25sp"
				 android:gravity="left" />
			<TextView
				 android:id="@+id/bclarification"
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:text="@string/backupclarification"
				 android:textColor="@color/white"
				 android:textSize="18sp"
				 android:gravity="left" />
		</LinearLayout>
		<LinearLayout
			 android:id="@+id/ll3"
			 android:layout_width="match_parent"
			 android:layout_height="match_parent"
			 android:layout_weight="1"
			 android:orientation="vertical"
			 android:gravity="top"
			 android:background="@drawable/border2_bgkikujin"
			 android:onClick="dispRestoreList"
		 >
			<TextView
				 android:id="@+id/rtitle"
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:text="@string/restoretitle"
				 android:textColor="@color/white"
				 android:textSize="25sp"
				 android:gravity="left" />
			<TextView
				 android:id="@+id/rclarification"
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:text="@string/restoreclarification"
				 android:textColor="@color/white"
				 android:textSize="18sp"
				 android:gravity="left" />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>